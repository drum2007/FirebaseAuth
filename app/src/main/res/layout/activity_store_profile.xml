<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beam.firebaseauth.StoreProfileActivity">
    <!--content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:text="@string/email"
        android:id="@+id/tvStoreEmail"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="@string/store_name"
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="@string/phone_number"
        android:id="@+id/editTextPhoneNumber"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="@string/capacity"
        android:id="@+id/storeCapacity"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="6dp"
        android:textSize="20sp"
        android:text="@string/business_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:hint="@string/open"
            android:id="@+id/openTime"
            android:layout_weight="1"
            android:inputType="time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="@string/close"
            android:id="@+id/closeTime"
            android:layout_weight="1"
            android:inputType="time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <CheckBox
            android:text="@string/sunday"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="@string/monday"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="@string/tuesday"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="@string/wednesday"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="@string/thursday"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="@string/friday"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="@string/saturday"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:text="@string/save_information"
        android:textColor="@color/white"
        android:id="@+id/btnSaveInfo"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:layout_margin="5dp"/>

    <Button
        android:text="@string/logout"
        android:textColor="@color/white"
        android:id="@+id/btnLogout"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:layout_margin="30dp"/>
    </LinearLayout>

    <!--menu-->
    <LinearLayout
        android:layout_gravity="start"
        android:background="#ffffff"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/menuProfile"
            android:text="Profile"
            android:contentDescription="Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            />
        <Button
            android:id="@+id/menuSelectStore"
            android:text="Select Store"
            android:contentDescription="Select Store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
