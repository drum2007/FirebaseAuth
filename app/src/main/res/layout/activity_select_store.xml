<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beam.firebaseauth.SelectStoreActivity">
    <!--content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:weightSum="2">

        <!--bt1-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_linegreen">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/white" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imStore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/border_linewhite"
                android:src="@mipmap/defualtphotos" />

            <LinearLayout
                android:id="@+id/StoreDetail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imStore"
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp">

                <TextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="@string/store_name"
                    android:textColor="@color/green"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStoreDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:text="@string/store_day"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/tvStoreTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:text="@string/store_time"
                        android:textColor="@color/green" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvStorePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="@string/store_phone"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvStoreAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/StoreDetail"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/store_address"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/tvStoreAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvStoreAddress"
                android:layout_margin="5dp"
                android:background="@drawable/border_linegreen"
                android:padding="5dp"
                android:text="@string/store_about"
                android:textColor="@color/green" />

        </RelativeLayout>


        <!--bt2/\-->
        <RelativeLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_linegreen">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button

                    android:id="@+id/bt2"

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"

                    android:background="@color/white" />
            </RelativeLayout>

            <ImageView

                android:id="@+id/imStore2"

                android:layout_width="100dp"

                android:layout_height="100dp"

                android:layout_margin="5dp"

                android:background="@drawable/border_linewhite"

                android:src="@mipmap/defualtphotos" />


            <LinearLayout

                android:id="@+id/StoreDetail2"

                android:layout_width="match_parent"

                android:layout_height="100dp"

                android:layout_margin="5dp"

                android:layout_toRightOf="@id/imStore2"

                android:orientation="vertical"

                android:paddingHorizontal="5dp"

                android:paddingVertical="3dp">


                <TextView

                    android:id="@+id/tvStoreName2"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_margin="1dp"

                    android:layout_weight="1"

                    android:text="@string/store_name"

                    android:textColor="@color/green"

                    android:textStyle="bold" />


                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_margin="1dp"

                    android:layout_weight="1"

                    android:orientation="horizontal">


                    <TextView

                        android:id="@+id/tvStoreDay2"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:layout_margin="1dp"

                        android:layout_weight="1"

                        android:text="@string/store_day"

                        android:textColor="@color/green" />


                    <TextView

                        android:id="@+id/tvStoreTime2"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:layout_margin="1dp"

                        android:layout_weight="1"

                        android:text="@string/store_time"

                        android:textColor="@color/green" />


                </LinearLayout>


                <TextView

                    android:id="@+id/tvStorePhone2"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_margin="1dp"

                    android:layout_weight="1"

                    android:text="@string/store_phone"

                    android:textColor="@color/green" />

            </LinearLayout>


            <TextView

                android:id="@+id/tvStoreAddress2"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_below="@id/StoreDetail2"

                android:layout_margin="10dp"

                android:layout_weight="1"

                android:text="@string/store_address"

                android:textColor="@color/green" />


            <TextView

                android:id="@+id/tvStoreAbout2"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_below="@id/tvStoreAddress2"

                android:layout_margin="5dp"

                android:background="@drawable/border_linegreen"

                android:padding="5dp"

                android:text="@string/store_about"


                android:textColor="@color/green" />

        </RelativeLayout>


    </LinearLayout>
    <!--menu-->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:orientation="vertical">

        <Button
            android:id="@+id/menuProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:contentDescription="Profile"
            android:text="Profile" />

        <Button
            android:id="@+id/menuSelectStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:contentDescription="Select Store"
            android:text="Select Store" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
